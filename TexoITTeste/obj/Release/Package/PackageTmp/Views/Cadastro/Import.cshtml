@model System.Data.DataTable
@using System.Data;

@{
    ViewBag.Title = "Index";
}


<div class="wrapper wrapper-content animated fadeInRight">

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h3>Importa CSV de Cidades</h3>
                    </div>
                    <div class="ibox-content">
                        @using (Html.BeginForm("Import", "Cadastro", null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="col-sm-offset-1 col-sm-11">
                                                <label class="file-upload btn btn-default">
                                                    <input type="file" id="dataFile" name="upload" data-show-preview="false" />
                                                </label>
                                                <input type="submit" value="Enviar" class="btn btn-primary" />
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @if (Model != null)
                                {
                                    <table class="table table-bordered table-hover table-dark">
                                        <thead class="thead-dark">
                                            <tr>
                                                @foreach (DataColumn col in Model.Columns)
                                                {
                                                    <th>@col.ColumnName</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (DataRow row in Model.Rows)
                                            {
                                                <tr>
                                                    @foreach (DataColumn col in Model.Columns)
                                                    {
                                                        <td>@row[col.ColumnName]</td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
